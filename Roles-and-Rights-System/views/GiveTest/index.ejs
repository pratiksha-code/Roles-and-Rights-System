                                       ng-model="testData.Options[$index].Optionc" required>

                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions{{$index+1}}" id="inlineRadio1{{$index+1}}"
