<!DOCTYPE html>
<html lang="en">

<head>
    <title>Log In</title>
    <% include ../Partials/head.ejs %>
</head>

<body class="bg-primary" ng-app="userRegistrationApp">
<!-- Register Content -->

<div class="container-login" ng-controller="userRegistrationAppCtrlr" ng-cloak>
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card shadow-sm my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-form">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">{{data.UserTypeID==2?"Student Registration" : data.UserTypeID==3?"Teacher Registration": "Registration"}}</h1>
                                </div>
                                <div class="col-12">
                                    <div class="alert alert-danger alert-dismissible" role="alert" ng-repeat="message in errorMessages">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                        {{message}}
                                    </div>
                                </div>
                                <form name="userTypeForm">
                                    <div class="form-group">
                                        <label>User Type</label>
                                        <select class="form-control" name="UserType" ng-model="data.UserTypeID" ng-change="userTypeSelected()" required>
                                            <option value="" disabled>---Select User Type---</option>
                                            <option value="2">Student</option>
                                            <option value="3">Teacher</option>
                                        </select>
                                        <div ng-messages="userTypeForm.UserType.$error" style="color:red"
                                             ng-if="userTypeForm.UserType.$touched"
                                             role="alert">
                                            <div ng-message="required">Please Select User Type</div>
                                        </div>
                                    </div>
                                </form>

                                <%include studentRegistrationForm.ejs%>
                                <%include teacherRegistrationForm.ejs%>

                                <hr>
                                <div class="text-center">
                                    <a class="font-weight-bold small" href="/login">Already have an account?</a>
                                </div>
                                <div class="text-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Content -->
<% include ../Partials/bodyScriptLoader.ejs %>
<script>
    <%include ng-app.js%>
</script>
</body>

</html>