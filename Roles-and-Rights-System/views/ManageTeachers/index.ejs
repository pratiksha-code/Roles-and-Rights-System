<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../Partials/head.ejs %>
</head>

<body id="page-top" ng-app="myApp" ng-controller="myAppCntrl" ng-init="initController()">
<div id="wrapper">
    <!-- Sidebar -->
    <% include ../Partials/sidebar.ejs %>
    <!--End Sidebar -->
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- TopBar -->
            <% include ../Partials/navbar.ejs %>
            <!-- Topbar -->
            <!-- Container Fluid-->
            <div class="container-fluid" id="container-wrapper">

                <div class="row mr-1">
                    <div class="col text-right">
                        <button type="button" class="btn btn-primary" ng-click="openModal('add')">
                            Add Teacher
                        </button>
                    </div>
                </div>
                <br>
                <div class="example ml-2">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mt-4 card  border-primary" style="border-radius: 16px;" ng-repeat="teacher in teachers">
                            <div class="well profile col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <figure>
                                        <img src="img/teacher.png" alt="teacherimage" class="img-profile rounded-circle" style="width:50px;" id="user-img">
                                    </figure>
                                    <h5 style="text-align:center;"><strong id="user-name">{{teacher.FirstName + " " + teacher.LastName}}</strong></h5>
                                    <!--<p style="text-align:center;font-size: smaller;overflow-wrap: break-word;" ><strong>EmailID:</strong><span class="tags" id="user-email">{{teacher.EmailID}}</span> </p> -->
                                    <p style="text-align:center;font-size: smaller;"><strong>Department Name : </strong><span class="tags" id="user-status"><strong>{{teacher.Department.DepartmentName}}</strong></span></p>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>
                                    <p style="text-align:center;font-size: smaller;"><strong>Role : Teacher</strong></p>

                                    <button ng-class="{'btn btn-success': teacher.IsVerified, 'btn btn-danger': !teacher.IsVerified}" ng-click="approveTeacher(teacher.UserID, !teacher.IsVerified)"
                                            style="border: 0.5px solid;border-radius: 30px;"><i
                                                class="fa fa-edit text-success" aria-hidden="true"></i></button>
                                    <button class="btn btn-xl" ng-click="openModal('edit', teacher)"
                                            style="border: 0.5px solid;border-radius: 30px;"><i
                                                class="fa fa-edit text-success" aria-hidden="true"></i></button>

                                    <button class="btn btn-xl" ng-click="deleteTeacher(teacher.UserID)"
                                            style="border: 0.5px solid;border-radius: 30px"><i
                                                class="fa fa-trash text-danger" aria-hidden="true"></i></button>


                                </div>
                            </div>
                        </div>

                    </div>

                    <!--Page Content Start Here-->
                    <!--End Of Page Content-->
                </div>

                <!---End Of Container Fluid-->
            </div>
            <!-- Footer -->
            <!-- Footer -->
        </div>
    </div>
    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <% include ../Partials/bodyScriptLoader.ejs %>
    <% include modal.ejs %>
    <script>
        <% include ng-app.js %>
    </script>
</body>

</html>