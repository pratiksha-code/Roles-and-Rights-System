<!DOCTYPE html>
<html lang="en">

<head>
    <title>Log In</title>
    <% include ../Partials/head.ejs %>
</head>

<body class="bg-primary " ng-app="userLoginApp">
<!-- Login Content -->
<div class="container-login" ng-controller="userLoginAppCtrlr" ng-cloak="">

    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card shadow-sm my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-form">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Login</h1>
                                </div>
                                <form class="user" name="login">
                                    <div class="alert alert-danger alert-dismissible" role="alert" ng-if="errorMessage.length">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                        {{errorMessage}}
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="EmailID"
                                               aria-describedby="emailHelp" name="EmailID"
                                               placeholder="Enter Email Address..." ng-model="data.EmailID" required>
                                        <div ng-messages="login.EmailID.$error" style="color:red"
                                             ng-if="login.EmailID.$touched"
                                             role="alert">
                                            <div ng-message="required">Please Enter Email ID</div>
                                            <div ng-message="email">Please Enter Valid Email ID</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="Password" name="Password"
                                               ng-model="data.Password" placeholder="Password" required>
                                        <div ng-messages="login.Password.$error" style="color:red"
                                             ng-if="login.Password.$touched"
                                             role="alert">
                                            <div ng-message="required">Please Enter Password</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small" style="line-height: 1.5rem;">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">Remember
                                                Me</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary btn-block" ng-click="logInUser()" ng-disabled="!login.$valid">Login</button>
                                    </div>
                                    <hr>
                                    <!--<a href="index.html" class="btn btn-google btn-block">-->
                                    <!--<i class="fab fa-google fa-fw"></i> Login with Google-->
                                    <!--</a>-->
                                    <!--<a href="index.html" class="btn btn-facebook btn-block">-->
                                    <!--<i class="fab fa-facebook-f fa-fw"></i> Login with Facebook-->
                                    <!--</a>-->
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="font-weight-bold small" href="/register">Create an Account!</a>
                                </div>
                                <div class="text-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Content -->
<% include ../Partials/bodyScriptLoader.ejs %>
<script>
    <%include ng-app.js%>
</script>
</body>

</html>